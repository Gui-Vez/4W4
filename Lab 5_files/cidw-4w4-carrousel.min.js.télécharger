(function(){let a=document.querySelector(".boite__carrousel"),c=document.querySelector(".boite__carrousel__navigation"),e=document.querySelector('.boite__carrousel__fermeture'),d=document.querySelectorAll('.galerie img'),b=document.createElement('img'),f=0;a.append(b);for(const g of d){let e=document.createElement('button');c.append(e),e.dataset.index=f++,c.append(e),e.addEventListener('mousedown',function(){b.setAttribute('src',d[this.dataset.index].getAttribute('src'))}),g.addEventListener('mousedown',function(){a.classList.add('ouvrir'),b.setAttribute('src',this.getAttribute('src'))})}e.addEventListener('mousedown',function(){a.classList.remove('ouvrir')})})()